    <button class="btn btn-success" onclick="boton2()">Pulsar</button>

    <script>
        function boton1() {
            alert("¡Hola! Este es el botón de presionar");
            console.log("Botón 1 pulsado");
        }
        function boton2() {
            alert("¡Hola! Has pulsado el botón 2");
            console.log("Botón 2 pulsado");
        }
    </script>
